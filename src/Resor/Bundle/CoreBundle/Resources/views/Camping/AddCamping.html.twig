        <div class="page-header">
            <h1>Ajouter un Camping</h1>
        </div>
    
    <form action="{{ path('camping_add') }}" method="POST" {{ form_enctype(form) }}  novalidate="novalidate">
        {{ form_errors(form) }}
        {{ form_widget(form) }}
